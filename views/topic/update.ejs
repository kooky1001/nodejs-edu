<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
</head>
<body>
<%- include('../includes/nav.ejs') %>
<%- include('../includes/topic-list.ejs') %>

<a href="/topic/create">create</a> <a href="/topic/update/<%= topic.id %>">update</a>

<form action="/topic/update_process" method="post">
    <input type="hidden" name="id" value="<%= topic.id %>">
    <p><input type="text" name="title" placeholder="title" value="<%= topic.title %>"></p>
    <p>
        <textarea name="description" placeholder="description"><%= topic.description %></textarea>
    </p>
    <p>
        <select name='author'>
            <% for(let author of authorList) { %>
                <option value="<%= author.id %>" <%= (author.id === topic.member_id) ? 'selected' : '' %>><%= author.name %></option>
            <% } %>
        </select>
    </p>
    <p>
        <input type="submit">
    </p>
</form>

</body>
</html>